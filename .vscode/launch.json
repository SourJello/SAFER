{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "1",
            "pipeTransport": {
                "pipeProgram": "docker",
                "pipeArgs": [
                    "exec",
                    "-i",
                    "safer-safer-api-1",
                    "sh",
                    "-c"
                ],
                "debuggerPath": "/vsdbg/vsdbg",
                "pipeCwd": "${workspaceFolder}"
            },
            "sourceFileMap": {
                "/workspace/SAFER.API": "${workspaceFolder}/SAFER.API"
            },
        },
        {
            "name": "Run SAFER.API Locally",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/SAFER.API/bin/Debug/net9.0/SAFER.API.dll",
            "args": [],
            "cwd": "${workspaceFolder}/SAFER.API",
            "stopAtEntry": false,
            "console": "internalConsole"
          }
    ]
  }
  